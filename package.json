{
  "name": "react-api-weaver",
  "version": "2.0.0",
  "description": "Convert OpenAPI YAML specs into typed React hooks with caching, polling, and cancellation support. Now with React 19 support!",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/react-forge/react-api-weaver.git"
  },
  "bin": {
    "react-api-weaver": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build",
    "link:example": "npm link && cd example && npm link react-api-weaver"
  },
  "keywords": [
    "react",
    "hooks",
    "openapi",
    "swagger",
    "api",
    "fetch",
    "cache",
    "polling",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "js-yaml": "^4.1.0",
    "openapi-typescript": "^6.7.3",
    "@apidevtools/swagger-parser": "^10.1.0",
    "openapi-types": "^12.1.3",
    "chokidar": "^3.5.3"
  },
  "devDependencies": {
    "@testing-library/react": "^14.1.2",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.5",
    "@types/react": "^19.0.0",
    "@vitest/ui": "^1.0.4",
    "jsdom": "^23.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsdown": "^0.9.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  }
}

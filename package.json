{
  "name": "react-api-weaver",
  "version": "2.0.2-alpha.0",
  "description": "Convert OpenAPI YAML specs into typed React hooks with caching, polling, and cancellation support. Now with React 19 support!",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react18": {
      "import": "./dist/react18/index.mjs",
      "require": "./dist/react18/index.js",
      "types": "./dist/react18/index.d.ts"
    },
    "./react19": {
      "import": "./dist/react19/index.mjs",
      "require": "./dist/react19/index.js",
      "types": "./dist/react19/index.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/react-forge/react-api-weaver.git"
  },
  "bin": {
    "react-api-weaver": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:coverage:update": "vitest run --coverage && node scripts/update-readme-coverage.js",
    "coverage:check": "node scripts/check-coverage.js",
    "coverage:update-readme": "node scripts/update-readme-coverage.js",
    "prepublishOnly": "npm run build",
    "link:example": "npm link && cd example && npm link react-api-weaver",
    "prepare": "husky",
    "version:alpha": "npm version prerelease --preid=alpha",
    "version:rc": "npm version prerelease --preid=rc",
    "version:stable": "npm version patch",
    "publish:alpha": "npm publish --tag alpha",
    "publish:rc": "npm publish --tag rc",
    "publish:stable": "npm publish --tag latest"
  },
  "keywords": [
    "react",
    "hooks",
    "openapi",
    "swagger",
    "api",
    "fetch",
    "cache",
    "polling",
    "typescript",
    "react-19",
    "suspense"
  ],
  "author": "ajay28kumar",
  "license": "MIT",
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "^10.1.0",
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "js-yaml": "^4.1.0",
    "openapi-types": "^12.1.3",
    "openapi-typescript": "^6.7.3"
  },
  "devDependencies": {
    "@testing-library/react": "^15.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.5",
    "@types/react": "^19.0.0",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.0.4",
    "husky": "^9.1.7",
    "jsdom": "^23.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsdown": "^0.9.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "packageManager": "yarn@1.22.22",
  "engines": {
    "yarn": ">=1.22.0"
  }
}
